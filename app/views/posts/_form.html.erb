<div class = form_area>
  <%= form_with(model: @post,local: true, url: choose_new_or_edit) do |form| %>
    <% if @post.errors.any?%>
      <h2>error: 0〜140字で入力してください。</h2>
    <% end %>
    
    <p><%= form.label :"コメント"%></p>
    <%= form.text_field :content,id:'textarea'%>
    <p><%= form.submit%></p>
  <% end %>

</div>